{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows: Build and Debug",
            "runtimeExecutable": "${execPath}",
            "args": [
                "compilePath=${workspaceRoot}",
                "compileCommand=lime build windows -debug -DHXCPP_DEBUGGER",
                "runPath=${workspaceRoot}/export/windows/cpp/bin/",
                "runCommand=antek.exe",
                "runInTerminal=false"
            ],
            "type": "hxcpp",
            "request": "launch",
            "stopOnEntry": true
        },
        {
            "name": "Windows: Debug",
            "runtimeExecutable": "${execPath}",
            "args": [
                "runPath=${workspaceRoot}/export/windows/cpp/bin/",
                "runCommand=antek.exe",
                "runInTerminal=false"
            ],
            "type": "hxcpp",
            "request": "launch",
            "program": "",
            "stopOnEntry": true
        }
    ]
}